<% if @todo.errors.any?%>
<h2>The following errors prevented the todo from being saved:</h2>
  <ul>
    <%@todo.errors.full_messages.each do |msg| %>
      <li>
        <%=msg%>
      </li>
    <%end%>
  </ul>
<%end%>
<h1>Create a new todo</h1>
<%= form_for @todo, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
  <p>
    <%= f.label :name %> <br>
    <%= f.text_field :name %> <br>
    <%= f.label :description %> <br>
    <%= f.text_area :description, size: "80x15" %>
  </p>
  <%= f.submit "Create" %>
<% end %>
<%= link_to "Back to todos listing", todos_path %>
