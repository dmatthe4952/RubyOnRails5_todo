<%= form_for @todo, url: todo_path(@todo), method: :patch, local: true  do |f| %>
  <p>
    <%= f.label :name %> <br>
    <%= f.text_field :name %> <br>
    <%= f.label :description %> <br>
    <%= f.text_area :description, size: "80x15" %>
  </p>
  <%= f.submit "Submit" %>
<% end %>
<%= link_to "Back to todos listing", todos_path %>
